    <core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover placement="Auto" class="sapUiResponsivePadding--header sapUiResponsivePadding--footer" >
        <customHeader>
            <Toolbar>
                <Button text="translate ({lang_code})" press="translateSentence" />
                <ToolbarSpacer />
                <Button text="speak" press="speakSentence" />
            </Toolbar>
        </customHeader>
        <Text class="sapUiSmallMargin" text="{text}" />
    </Popover>
    </core:FragmentDefinition>